// Prisma Schema for Blox Fruits Shop
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - Lưu thông tin người dùng và Discord account
model User {
  id              String    @id @default(cuid())
  email           String?   @unique
  discordId       String?   @unique
  discordUsername String?
  discordAvatar   String?
  isLinked        Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  orders          Order[]
  
  @@index([discordId])
  @@index([email])
}

// Product model - Sản phẩm trong shop
model Product {
  id          String   @id @default(cuid())
  name        String
  price       Float
  priceStr    String   // Giá dạng string như "30$"
  image       String
  category    String   // Bundles, Best Seller, Permanent Fruits, Gamepass
  game        String   @default("Blox Fruits")
  description String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]
  
  @@index([category])
  @@index([game])
}

// Order model - Đơn hàng
model Order {
  id            String      @id @default(cuid())
  userId        String
  ticketNumber  Int         @unique
  totalPrice    Float
  status        OrderStatus @default(PENDING)
  discordTicketId String?   // ID của ticket channel trên Discord
  paymentMethod String?     // paypal, ltc, applepay
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id])
  orderItems    OrderItem[]
  
  @@index([userId])
  @@index([ticketNumber])
  @@index([status])
}

// OrderItem model - Chi tiết sản phẩm trong đơn hàng
model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int      @default(1)
  price     Float    // Giá tại thời điểm mua
  createdAt DateTime @default(now())
  
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  @@index([orderId])
  @@index([productId])
}

// OrderStatus enum
enum OrderStatus {
  PENDING         // Đang chờ thanh toán
  PROCESSING      // Đang xử lý
  COMPLETED       // Hoàn thành
  CANCELLED       // Đã hủy
  REFUNDED        // Đã hoàn tiền
}